<!DOCTYPE html>
<html lang="es-AR">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="shortcut icon" href="/images/G7favicon-admin.svg" type="image/x-icon">

  <!--Iconos-->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

  <!--Fuentes (de Google Fonts)-->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Verdana&display=swap" rel="stylesheet">

  <title>Administración de Productos | Grupo Sie7e</title>

  <!--Hoja de estilos propia de esta página-->
  <link rel="stylesheet" href="/css/product-management-styles.css">
</head>

<body>
  <header class="main-header">
    <div class="main-header__logo">
      <a href="/"><img src="/images/logoG7-admin.svg" alt="logoG7"></a>
    </div>
    <p class="main-header__title"><i class="main-header__pipe fas fa-chevron-right"></i>Administración</p>
  </header>

  <main>
    <h1>Editar Productos</h1>


    <!-- Buscador de Producto -->
    <form class="product-selection" method="post" action="/admin/products/search?_method=PUT">

      <label>Buscar Producto:</label>
      <input type="text" name="search" placeholder="Buscar por nombre, SKU, categoría">

      <select name="searchId" name="searchId">
        <% inventory.forEach(product => { %>
        <option value="<%= product.id %>"><%= product.name %></option>
        <% }) %>
      </select>

      <button type="submit" class="blue-button search-button">Buscar</button>
    </form>

<!-- arreglar estetica y funcionalmente -->

    <div class="d-grid gap-2 fixed-top">
      <a href="../create" class="btn btn-primary">Crear producto</a>
    </div>
    
<!-- ------------------------------------------- -->
<!-- arreglar estetica y funcionalmente -->

    <div class="d-grid gap-2 fixed-top">
      <a href="../../../products/detail/<%= inventoryItem.id %>" class="btn btn-primary">mostrar en tienda</a>
    </div>

<!-- ------------------------------------------- -->

    <form class="product-form" method="post" action="/admin/products/<%= id %>?_method=PUT" enctype="multipart/form-data">
      <!-- Sección de datos del producto -->
      <section class="product-form__data">
        <label for="name">Nombre del Producto:</label>
        <input type="text" id="name" name="name" placeholder="Sanguche de milanesa" value="<%= inventoryItem.name %>" required>

        <label for="description">Descripción:</label>
        <textarea id="description" name="description" placeholder="Sanguche de milanesa con tomate y lechuga, con un leve aderezo a base de mayonesa y mostaza. Un clasico de la gastronomia argentina" required><%= inventoryItem.description %></textarea>

        <label for="sku">SKU:</label>
        <input type="text" id="sku" name="sku" placeholder="MIL-001CA" value="<%= inventoryItem.sku %>" required>

        <label for="ingredients">Ingredientes:</label>
        <p>separar con comas!!!</p>
        <textarea id="ingredients" name="ingredients" placeholder="Pan, milanesa, tomate, lechuga, mayonesa, mostaza" required><%= inventoryItem.ingredients.join(', ')%></textarea>

        <label for="image">Imagen del Producto:</label>
        <input type="file" id="image" name="image" accept="image/*" onchange="loadFile(event)">

        <div>
          <img src="<%= inventoryItem.image %>" title="<%= inventoryItem.name %>" alt="<%= inventoryItem.name %>" id="output">
        </div>
        <script>
          var loadFile = function(event) {
            var output = document.getElementById('output');
            output.src = URL.createObjectURL(event.target.files[0]);
            output.onload = function() {
              URL.revokeObjectURL(output.src) // free memory
            }
          };
        </script>

        <select id="category" name="category" required>
          <option value="comida" <% if (inventoryItem.category === 'comida') { %> selected <% } %>>Comida</option>
          <option value="sanguche" <% if (inventoryItem.category === 'sanguche') { %> selected <% } %>>Sanguchito</option>
          <option value="bebidas" <% if (inventoryItem.category === 'bebidas') { %> selected <% } %>>Bebidas</option>
          <option value="snacks" <% if (inventoryItem.category === 'snacks') { %> selected <% } %>>Snacks</option>
          <option value="postres" <% if (inventoryItem.category === 'postres') { %> selected <% } %>>Postres</option>
          <option value="otros" <% if (inventoryItem.category === 'otros') { %> selected <% } %>>Otros</option>
        </select>

        <div class="product-form__data--checkbox-group">

          <div class="product-form__data--checkbox-container">
            <label for="vegetarian">Apto vegetariano</label>
            <input type="checkbox" id="vegetarian" name="vegetarian" <% if (inventoryItem.suitability.vegetarian) { %> checked <% } %>>
          </div>

          <div class="product-form__data--checkbox-container">
            <label for="vegan">Apto vegano</label>
            <input type="checkbox" id="vegan" name="vegan" <% if (inventoryItem.suitability.vegan) { %> checked <% } %>>
          </div>

          <div class="product-form__data--checkbox-container">
            <label for="celiac">Apto celiaco</label>
            <input type="checkbox" id="celiac" name="celiac" <% if (inventoryItem.suitability.celiac) { %> checked <% } %>>
          </div>
        </div>

        <label for="size">Tamaño:</label>
        <input type="text" id="size" name="size" placeholder="Grande" value="<%= inventoryItem.size %>" required>

        <label for="price">Precio:</label>
        <input type="number" id="price" name="price" step="100" min=0 placeholder="$4.000" value="<%= inventoryItem.price %>" required>
      </section>

      <!-- Sección de Botones -->
      <section class="buttons-section">
        <button type="submit" class="blue-button">Guardar Cambios</button>
      </section>
    </form>
    <form class="product-form" method="post" action="/admin/products/<%= id %>?_method=DELETE">
      <button type="submit" class="blue-button">BORRAR</button>
    </form>
  </main>

  <footer class="main-footer">
    <p class="main-footer__copyright">© Grupo Sie7e y asociados. Todos los derechos reservados</p>
  </footer>

  <script>
    document.querySelector('.top-side__burguer-menu').addEventListener('click', () => {
      document.querySelector('nav ul').classList.toggle('active');
    });
  </script>
</body>

</html>