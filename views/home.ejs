<!DOCTYPE html>
<html lang="es-AR">

<head>
    <%- include("partials/head.ejs") %>
    <title>Inicio | Grupo Sie7e</title>

    <!--Hoja de estilos propia de esta página-->
    <link rel="stylesheet" href="/css/home-styles.css">

    <!--Otras fuentes-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playwrite+CU:wght@100..400&display=swap" rel="stylesheet">
</head>

<body>
    <%- include("partials/header.ejs") %>
    <section class="search-box-container">
        <div class="search-box">
            <input type="search" class="search-box__input" placeholder="Buscar">
            <button type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
        </div>
    </section>
    <main>
        <h1>BIENVENIDOS A GRUPO SIE7E</h1>
        <h2 class="h__Title">La experiencia perfecta en sanguches</h2>
        <div class="div__gallery">
            <section class="gallery">
                <img src="/images/imagen1.png" alt="imagen1">
                <img src="/images/products/sanguche-pollo.png" alt="Sanguche Pollo" onclick="toProductDetail(0)" style="cursor: pointer;">
                <img src="/images/products/sanguche-jyq.png" alt="Sanguche JyQ" onclick="toProductDetail(1)" style="cursor: pointer;">
                <img src="/images/products/sanguche-charcutero.png" alt="Sanguche Charcutero" onclick="toProductDetail(2)" style="cursor: pointer;">
            </section>
        </div>
        <!-- Sección de productos -->
        <section class="container-card">
            <h2>Algunos de nuestros productos</h2>
            <section class="products">
                <% for(let i=3; i<inventory.length; i++){ %>
                    <div class="products-cards" onclick="toProductDetail(<%= i %>)">
                        <img src="<%= inventory[i].image %>" alt="<%= inventory[i].name %>" class="img-fluid">
                        <h3>
                            <%= inventory[i].name %>
                        </h3>
                        <p>
                            <%= inventory[i].description %>
                        </p>
                    </div>
                <% } %>
            </section>
        </section>
    </main>
    <section class="epc-box-container">
        <div class="epc-box">
            <div class="epc">
                <i class="fas fa-shipping-fast fa-3x"></i>
                <p>Envíos y Retiros</p>
            </div>
            <div class="epc">
                <i class="fas fa-credit-card fa-3x"></i>
                <p>Paga como quieras</p>
            </div>
            <div class="epc">
                <i class="fas fa-lock fa-3x"></i>
                <p>Compra con seguridad</p>
            </div>
        </div>
    </section>
    <%- include("partials/footer.ejs") %>
    <script>
        function toProductDetail(index) {
            window.location.href = "/products/detail/" + index;
        }
    </script>
</body>

</html>
